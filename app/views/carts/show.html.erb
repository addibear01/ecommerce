<h1>Your Cart</h1>

<% if @cart.cart_items.any? %>
  <ul>
    <% @cart.cart_items.each do |item| %>
      <li>
        <%= item.teddy_type.teddy_name %> - Quantity: <%= item.quantity %> - Price: <%= number_to_currency(item.teddy_type.price) %>
        <%= link_to 'Remove', remove_item_cart_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </li>
    <% end %>
  </ul>
  <p>Total Price: <%= number_to_currency(@cart.total_price) %></p>

  <%= form_with model: @order, url: orders_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :street %>
      <%= form.text_field :street, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :city %>
      <%= form.text_field :city, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :province %>
      <%= form.select :province, options_for_select(Order::PROVINCES), {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :postal_code %>
      <%= form.text_field :postal_code, class: 'form-control' %>
    </div>
    <%= form.submit 'Complete Order', class: 'btn btn-primary' %>
  <% end %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
