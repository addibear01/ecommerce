<h1>Teddy Types</h1>

<%= form_with url: teddy_types_path, method: :get, local: true do %>
  <div>
    <%= label_tag :search, "Search by keyword:" %>
    <%= text_field_tag :search, params[:search] %>
  </div>
  <div>
    <%= label_tag :category_id, "Filter by category:" %>
    <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :category_name, params[:category_id]), prompt: "Select a category" %>
  </div>
  <div>
    <%= submit_tag 'Search' %>
  </div>
<% end %>

<ul>
  <% @teddy_types.each do |teddy_type| %>
    <li>
      <%= link_to teddy_type.teddy_name, teddy_type_path(teddy_type) %>
    </li>
  <% end %>
</ul>
