<h1>Orders Report</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>User</th>
      <th>Total Amount</th>
      <th>Payment Status</th>
      <th>Payment ID</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user.email %></td>
        <td><%= number_to_currency(order.total_amount) %></td>
        <td><%= order.payment_status %></td>
        <td><%= order.payment_id %></td>
        <td><%= order.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
